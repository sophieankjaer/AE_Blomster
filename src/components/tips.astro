<style>
    img{
        width: 350px;
        height: auto;
    }

    .t_card{
display: flex;
flex-direction: column;
margin: 2%;
    }

    .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(251, 244, 220, 0.8);
    color: var(--brown);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1;
    font-size: 30px;
  }

  .t_cardbox:hover .overlay {
    opacity: 1;
  }

  .t_cardbox {
    width: 300px;
    height: 300px;
    overflow: hidden;

    position: relative;
  }
</style>